<form method="post">
    <div class="form-group">
        <label for="name">Accessory name</label>
        <input type="text" name="name" id="name">
        {% if errors['name'] is defined %}
            <div class="error-message">{{ errors['name'] }}</div>
        {% endif %}
    </div>
    <div class="form-group">
        <label for="url">Accessory image URL</label>
        <input type="url" name="url" id="url">
        {% if errors['url'] is defined %}
            <div class="error-message">{{ errors['url'] }}</div>
        {% endif %}
    </div>
    <div class="form-btn">
    <button class="btn primary-btn">Create this accessory</button>
    </div>
</form>
